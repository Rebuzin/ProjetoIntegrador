<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cadastro de Motorista"
        android:backgroundTint="#005500"
        android:textColor="#FFFFFF"
        android:onClick="irParaTelaCadMotorista"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cadastro de Veiculo"
        android:backgroundTint="#005500"
        android:textColor="#FFFFFF"
        android:onClick="irParaTelaCadVeiculo"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cadastro de Viagem"
        android:backgroundTint="#005500"
        android:textColor="#FFFFFF"
        android:onClick="irParaTelaMain"/>

</LinearLayout>